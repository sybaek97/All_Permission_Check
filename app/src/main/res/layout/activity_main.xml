<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getSmsDataButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="sms 정보 받기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getCallLogDataButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="call-log 정보 받기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getBluetoothDataButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Bluetooth 정보 받기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getCalendarDataButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Calendar 정보 받기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getContactsDataButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Contacts 정보 받기" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>